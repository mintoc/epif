citHeader("To cite package 'SMIR' in publications use:")
     
     desc <- packageDescription("SMIR")
     year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
     vers <- paste("R package version", desc$Version)
     
     citEntry(entry="book",
              title = "Statistical modelling in R",
              author = personList(as.person("Murray Aitkin"),
                                  as.person("Brian Francis"),
                                  as.person("John Hinde"),
                                  as.person("Ross Darnell")),
              year = year,
              note = vers,
     
              textVersion =
              paste("Murray Aitkin, Brian Francis, John Hinde and Ross Darnell(",
                    year,"). SMIR: Statistical modelling in R. ",
                    vers, ".", sep=""))
